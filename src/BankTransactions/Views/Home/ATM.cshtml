@using nl.jbs.banktransactions

@model IEnumerable<BankRecord>

@{
    ViewBag.Title = "ATM";
}

<h2>ATM</h2>

<p>Listing all ATM transactions, ordered descendingly by date</p>
<p>Total amount: @string.Format("{0:C}", Model.Sum(r => r.Type.Equals(BankRecord.TransactionType.DEBIT) ? r.Amount * -1 : r.Amount))</p>

@Html.Partial("Partials/TransactionTable", Model)